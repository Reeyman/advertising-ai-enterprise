{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "scripts": {
    "migrations:check": "node scripts/apply-phase2-migrations.js check",
    "migrations:generate": "node scripts/apply-phase2-migrations.js generate",
    "migrations:apply": "node scripts/apply-phase2-migrations.js apply",
    "migrations:list": "node scripts/apply-phase2-migrations.js list",
    "migrations:create": "node scripts/create-phase-migration.js",
    "migrations:apply-single": "node scripts/apply-migration.js",
    "migrations:verify": "node scripts/verify-phase2-complete.js",
    "dev": "npx next dev",
    "dev:webpack": "NEXT_DISABLE_TURBOPACK=1 npx next dev",
    "build": "npx next build",
    "start": "npx next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx,yml,yaml}\" \"*.{js,jsx,ts,tsx,json,yml,yaml,md,mdx}\" \"*.config.{js,ts,mjs}\" \".eslintrc*.{js,json}\" \"eslint.config.*\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx,yml,yaml}\" \"*.{js,jsx,ts,tsx,json,yml,yaml,md,mdx}\" \"*.config.{js,ts,mjs}\" \".eslintrc*.{js,json}\" \"eslint.config.*\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "audit:security": "npx tsx scripts/audit-routes-security.ts",
    "audit:deps": "npm audit --audit-level=high",
    "scan:secrets": "bash scripts/gitleaks-check.sh",
    "setup:hooks": "bash scripts/setup-git-hooks.sh",
    "migrate": "node scripts/apply-migrations-direct.js",
    "migrate:dry-run": "node scripts/apply-migrations-direct.js --dry-run",
    "eval:intent": "./src/lib/ai/evals/eval-with-mock.sh",
    "dev:tunnel": "./scripts/start-ngrok.sh 3000",
    "ngrok:url": "./scripts/get-ngrok-url.sh",
    "analyze": "node scripts/analyze.mjs",
    "lhci": "lhci autorun --config=./lighthouserc.cjs",
    "ci": "./scripts/ci-local.sh",
    "ci:local": "./scripts/ci-local.sh"
  },
  "dependencies": {
    "@canva/asset": "^2.3.0",
    "@canva/design": "^2.7.5",
    "@canva/error": "^2.1.0",
    "@canva/platform": "^2.2.0",
    "@canva/user": "^2.1.2",
    "@sentry/nextjs": "^10.32.1",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.6.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "openai": "^6.15.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "resend": "^6.6.0",
    "stripe": "^20.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^16.1.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^5.1.2",
    "axe-core": "^4.11.0",
    "eslint": "^9",
    "eslint-config-next": "^16.1.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.4.0",
    "pg": "^8.16.3",
    "postcss": "^8",
    "prettier": "^3.7.4",
    "server-only": "^0.0.1",
    "supabase": "^2.70.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "tmp": "^0.2.5"
  }
}
